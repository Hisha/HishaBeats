<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="4"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_row="0"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/btnC0R0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C0R0"
            android:background="@drawable/shape"/>

        <Button
            android:id="@+id/btnC1R0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"/>

        <Button
            android:id="@+id/btnC2R0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"/>

    </LinearLayout>

    <LinearLayout
        android:layout_row="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnC0R1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C0R0"
            android:background="@drawable/shape"/>

        <Button
            android:id="@+id/btnC1R1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"/>

        <Button
            android:id="@+id/btnC2R1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"/>

    </LinearLayout>

    <LinearLayout
        android:layout_row="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnC0R2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C0R2"
            android:background="@drawable/shape"/>

        <Button
            android:id="@+id/btnC1R2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"/>

        <Button
            android:id="@+id/btnC2R2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"/>

    </LinearLayout>

    <LinearLayout
        android:layout_row="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnC0R3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C0R3"
            android:background="@drawable/shape"/>

        <Button
            android:id="@+id/btnC1R3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"/>

        <Button
            android:id="@+id/btnC2R3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"/>

    </LinearLayout>

</GridLayout>
